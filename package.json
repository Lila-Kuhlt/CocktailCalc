    "@nestjs/platform-express": "^10.4.2",
    "@prisma/client": "^5.19.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nuxt/devtools": "^1.4.1",
    "@nuxtjs/color-mode": "^3.4.4",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@typescript-eslint/parser": "^7.18.0",
    "nestjs-prisma": "^0.23.0",
    "nuxt": "^3.13.0",
    "postcss": "^8.4.42",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.19.0",
