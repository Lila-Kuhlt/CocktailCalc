// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  name String @unique

  recipes RecipeAmount[]
}

model RecipeAmount {
  amount     Float
  eventName  String
  recipeName String

  recipe Recipe @relation(fields: [recipeName], references: [name], onDelete: Cascade)
  Event  Event? @relation(fields: [eventName], references: [name], onDelete: Cascade)
  @@unique([eventName, recipeName])
}

model Recipe {
  name        String  @unique
  description String?

  ingredients  IngredientAmount[]
  RecipeAmount RecipeAmount[]
}

model IngredientAmount {
  amount         Float
  recipeName     String
  ingredientName String

  Recipe     Recipe?    @relation(fields: [recipeName], references: [name], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientName], references: [name], onDelete: Cascade)
  @@unique([recipeName, ingredientName])
}

model Ingredient {
  name  String @unique
  price Float

  IngredientAmount IngredientAmount[]
}
